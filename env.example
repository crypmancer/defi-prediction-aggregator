# ============================================
# OracleVault Environment Variables Template
# ============================================
# 
# This is a consolidated example file.
# For package-specific examples, see:
# - packages/contracts/env.example
# - packages/backend/env.example
# - packages/frontend/env.example
#
# Copy the appropriate .env.example to .env in each package
# ============================================

# ============================================
# CONTRACTS PACKAGE (.env in packages/contracts/)
# ============================================

# Blockchain RPC URLs
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
POLYGON_RPC_URL=https://polygon-rpc.com
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# Private Key (for deployment - NEVER commit this!)
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Block Explorer API Keys
ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key
ARBISCAN_API_KEY=your_arbiscan_api_key

# ============================================
# BACKEND PACKAGE (.env in packages/backend/)
# ============================================

# Server Configuration
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# OpenAI API Key (for AI analysis)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Contract Addresses (update after deployment)
PREDICTION_AGGREGATOR_ADDRESS=0x0000000000000000000000000000000000000000
ORACLE_VAULT_ADDRESS=0x0000000000000000000000000000000000000000
AUTOMATED_BETTING_ADDRESS=0x0000000000000000000000000000000000000000

# Blockchain RPC URL
BLOCKCHAIN_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# ============================================
# FRONTEND PACKAGE (.env in packages/frontend/)
# ============================================

# API Configuration
VITE_API_URL=http://localhost:3001

# Blockchain Configuration
VITE_DEFAULT_NETWORK=sepolia

# Contract Addresses (update after deployment)
VITE_PREDICTION_AGGREGATOR_ADDRESS=0x0000000000000000000000000000000000000000
VITE_ORACLE_VAULT_ADDRESS=0x0000000000000000000000000000000000000000
VITE_AUTOMATED_BETTING_ADDRESS=0x0000000000000000000000000000000000000000

# Feature Flags
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_AUTOMATED_BETTING=true
VITE_ENABLE_VAULTS=true
