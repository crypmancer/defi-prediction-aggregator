# API Configuration
# Backend API URL
VITE_API_URL=http://localhost:3001
# For production, set to your backend domain
# VITE_API_URL=https://api.yourdomain.com

# Blockchain Configuration
# Default network to connect to
VITE_DEFAULT_NETWORK=sepolia
# Options: mainnet, sepolia, polygon, arbitrum, localhost

# Contract Addresses (update after deployment)
# These will be populated after contract deployment
VITE_PREDICTION_AGGREGATOR_ADDRESS=0x0000000000000000000000000000000000000000
VITE_ORACLE_VAULT_ADDRESS=0x0000000000000000000000000000000000000000
VITE_AUTOMATED_BETTING_ADDRESS=0x0000000000000000000000000000000000000000

# RPC URLs (optional, for direct blockchain access)
# If not set, will use MetaMask's default RPC
VITE_ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
VITE_POLYGON_RPC_URL=https://polygon-rpc.com
VITE_ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# App Configuration
VITE_APP_NAME=OracleVault
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_AUTOMATED_BETTING=true
VITE_ENABLE_VAULTS=true

# Analytics (optional)
# VITE_ANALYTICS_ID=your_analytics_id
# VITE_GA_TRACKING_ID=your_ga_tracking_id

# Sentry Error Tracking (optional)
# VITE_SENTRY_DSN=your_sentry_dsn

# Environment
VITE_ENV=development
# Options: development, staging, production
