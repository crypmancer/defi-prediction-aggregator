# Server Configuration
PORT=3001
NODE_ENV=development

# Logging
LOG_LEVEL=info
# Options: error, warn, info, debug

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here
# Note: AI features will use mock data if this is not set

# Blockchain Configuration
# Contract addresses (update after deployment)
PREDICTION_AGGREGATOR_ADDRESS=0x0000000000000000000000000000000000000000
ORACLE_VAULT_ADDRESS=0x0000000000000000000000000000000000000000
AUTOMATED_BETTING_ADDRESS=0x0000000000000000000000000000000000000000

# RPC URL for blockchain interactions
# Use the same RPC URL as contracts package
BLOCKCHAIN_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
# For production, set to your frontend domain
# CORS_ORIGIN=https://yourdomain.com

# Database (if needed in future)
# DATABASE_URL=postgresql://user:password@localhost:5432/oraclevault

# Redis (if needed for caching)
# REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Aggregator Service Configuration
AGGREGATOR_UPDATE_INTERVAL=300000
# Update interval in milliseconds (5 minutes default)

# Supported Prediction Market Platforms
# Comma-separated list of platforms to aggregate
SUPPORTED_PLATFORMS=Polymarket,Augur,Kalshi,PredictIt
