# Blockchain RPC URLs
# Get your RPC URLs from providers like Infura, Alchemy, or QuickNode

# Sepolia Testnet
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Polygon Mainnet
POLYGON_RPC_URL=https://polygon-rpc.com
# Or use: https://rpc.ankr.com/polygon

# Arbitrum One
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
# Or use: https://rpc.ankr.com/arbitrum

# Ethereum Mainnet (for production)
# MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Private Key for Deployment
# WARNING: Never commit your private key to version control!
# Use a dedicated deployment wallet with minimal funds
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Block Explorer API Keys (for contract verification)

# Etherscan (Ethereum & Sepolia)
ETHERSCAN_API_KEY=your_etherscan_api_key
# Get from: https://etherscan.io/apis

# Polygonscan
POLYGONSCAN_API_KEY=your_polygonscan_api_key
# Get from: https://polygonscan.com/apis

# Arbiscan
ARBISCAN_API_KEY=your_arbiscan_api_key
# Get from: https://arbiscan.io/apis

# Network Configuration
# Set to the network you want to deploy to
# Options: hardhat, localhost, sepolia, polygon, arbitrum
NETWORK=hardhat
