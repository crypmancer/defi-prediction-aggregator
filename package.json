{
  "name": "defi-prediction-aggregator",
  "version": "1.0.0",
  "description": "AI-Enhanced Decentralized Prediction Aggregator & Vaults",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "build": "npm run build:contracts && npm run build:backend && npm run build:frontend",
    "build:contracts": "cd packages/contracts && npm run build",
    "build:backend": "cd packages/backend && npm run build",
    "build:frontend": "cd packages/frontend && npm run build",
    "test": "npm run test:contracts && npm run test:backend",
    "test:contracts": "cd packages/contracts && npm test",
    "test:backend": "cd packages/backend && npm test",
    "deploy": "cd packages/contracts && npm run deploy"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
